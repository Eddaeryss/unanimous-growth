<style is:global>
    :root {
        --color-black: #000000;
        --color-cream: #FAF9F5;
        --font-serif: 'Playfair Display', serif;
        --font-script: 'Great Vibes', cursive;
        --font-sans: 'Inter', sans-serif;
    }

    html { scroll-behavior: smooth; }
    body {
        margin: 0; padding: 0;
        font-family: var(--font-serif);
        background-color: var(--color-black);
        color: var(--color-cream);
        overflow-x: hidden;
    }
    h1, h2, h3 { font-family: var(--font-serif); font-weight: 700; margin: 0; }
    p { font-family: var(--font-sans); }
    a { text-decoration: none; color: inherit; }
    .text-center { text-align: center; }

    /* ESTRUCTURA DE PANTALLAS (100vh con padding inteligente) */
    .fullscreen-section {
        min-height: 100vh;
        width: 100%;
        position: relative;
        box-sizing: border-box;
        overflow: hidden; 
    }
    .align-center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 80px; 
        padding-bottom: 120px; /* Mucho más espacio abajo para que el botón respire */
    }
    .content-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        position: relative;
        z-index: 2;
        width: 100%;
    }

    /* ANIMACIONES REVEAL */
    .reveal { opacity: 0; transform: translateY(30px); transition: opacity 0.8s ease-out, transform 0.8s ease-out; }
    .reveal.active { opacity: 1; transform: translateY(0); }

    /* --- NAVEGACIÓN Y CORRECCIÓN DEL LOGO --- */
    .navbar {
        position: fixed; top: 0; width: 100%; height: 80px;
        background-color: var(--color-black); 
        color: var(--color-cream);
        display: flex; justify-content: space-between; align-items: center;
        padding: 0 4rem; box-sizing: border-box; z-index: 1000;
        transition: background-color 0.4s ease, color 0.4s ease;
    }
    
    /* Contenedor relativo para montar ambas imágenes del logo */
    .logo-container {
        position: relative;
        height: 70px;
        width: 200px; /* Ancho estimado, ajusta si tu logo lo requiere */
        display: flex;
        align-items: center;
    }
    .nav-logo {
        position: absolute;
        height: 100%;
        width: auto;
        object-fit: contain;
        transition: opacity 0.4s ease;
    }
    
    /* Truco de Blend Mode: 
       Screen ignora el fondo negro, Multiply ignora el fondo blanco/crema */
    .logo-dark-bg { opacity: 1; mix-blend-mode: screen; }
    .logo-light-bg { opacity: 0; mix-blend-mode: multiply; }

    /* Estado cuando se hace Scroll */
    .navbar.scrolled {
        background-color: var(--color-cream);
        color: var(--color-black);
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }
    .navbar.scrolled .logo-dark-bg { opacity: 0; }
    .navbar.scrolled .logo-light-bg { opacity: 1; }

    .nav-links { list-style: none; display: flex; gap: 2rem; margin: 0; padding: 0; }
    .nav-links a { font-family: var(--font-serif); font-size: 1.1rem; transition: opacity 0.3s ease; }
    .nav-links a:hover { opacity: 0.6; }

    /* --- SECCIÓN 1: HERO --- */
    .hero-section {
        display: flex; align-items: center; justify-content: space-between;
        /* Reducimos el padding superior y aumentamos el inferior para subir el contenido */
        padding: 100px 4rem 140px 4rem; 
        max-width: 1400px; margin: 0 auto;
    }
    .hero-content { flex: 1.1; padding-right: 2rem; }
    .hero-content h1 { font-size: 4.5rem; line-height: 1.1; font-weight: 600; margin-bottom: 1.5rem; }
    .text-script { font-family: var(--font-script); font-size: 1.3em; font-weight: 400; padding: 0 5px;}
    
    /* Ajuste para que el texto secundario sea super visible */
    .hero-subtitle { 
        font-size: 1.4rem; 
        line-height: 1.5; 
        font-weight: 300; 
        color: #E0E0E0; /* Ligeramente más brillante */
    }
    
    .hero-image { flex: 1; display: flex; justify-content: center; align-items: center; }
    
    /* Diseño Premium para la imagen */
    .image-premium-wrapper {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .image-premium-wrapper img {
        max-width: 100%;
        height: auto;
        max-height: 55vh;
        border-radius: 20px; /* Bordes suaves */
        box-shadow: 0 20px 50px rgba(0,0,0,0.6); /* Sombra elegante */
        /* Efecto para difuminar la imagen hacia abajo y fundirla con el negro */
        -webkit-mask-image: linear-gradient(to bottom, black 70%, transparent 100%);
        mask-image: linear-gradient(to bottom, black 70%, transparent 100%);
        object-fit: cover;
    }

    /* FONDOS CREMA COMUNES */
    .cream-section { background-color: var(--color-cream); color: var(--color-black); }

    /* --- SECCIÓN 2: UNANIMIDAD --- */
    .compact-layout {
        display: flex;
        flex-direction: column;
        gap: 2rem; /* Acerca los elementos controladamente */
    }
    .heading-mixed { font-size: 2.5rem; font-weight: 600; margin-bottom: 1rem; }
    .text-script-large { font-family: var(--font-script); font-size: 1.6em; font-weight: 400; margin-left: 10px;}
    .subtitle-large { font-family: var(--font-serif); font-size: 1.4rem; line-height: 1.5; max-width: 900px; margin: 0 auto; font-weight: 400; }
    
    .huge-logo { width: 100%; display: flex; justify-content: center; }
    .logo-image-large { width: 100%; max-width: 650px; height: auto; mix-blend-mode: multiply; }

    /* --- SECCIÓN 3: FILOSOFÍA --- */
    .body-large { font-family: var(--font-serif); font-size: 1.5rem; line-height: 1.6; max-width: 900px; margin: 0 auto; font-weight: 400; }
    .body-large strong { font-weight: 700; }

    /* --- SECCIÓN 4: SERVICIOS --- */
    .services-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 3rem; max-width: 1100px; margin: 0 auto; }
    .service-card { display: flex; flex-direction: column; align-items: center; text-align: center; }
    .icon-container { margin-bottom: 1.5rem; display:flex; justify-content:center; align-items:center; }
    .service-card h3 { font-family: var(--font-serif); font-size: 1.4rem; font-weight: 600; line-height: 1.4; }

    /* --- BOTONES DE SCROLL --- */
    .scroll-down-btn {
        position: absolute;
        bottom: 40px; /* Ajustado perfectamente para que no se pierda abajo */
        left: 50%;
        transform: translateX(-50%);
        color: var(--color-cream);
        animation: bounce 2s infinite;
        z-index: 50; /* Z-index super alto para que nada lo tape */
        display: flex; justify-content: center; align-items: center;
        cursor: pointer;
    }
    .scroll-down-btn.dark-btn { 
        color: var(--color-black); 
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
        40% { transform: translateX(-50%) translateY(-15px); }
        60% { transform: translateX(-50%) translateY(-7px); }
    }

    /* ESTRELLAS DECORATIVAS */
    .star { position: absolute; z-index: 1; opacity: 0.9; }

    /* WHATSAPP FLOTANTE */
    .whatsapp-float {
        position: fixed; bottom: 30px; right: 30px;
        background-color: #25D366; color: white;
        width: 65px; height: 65px; border-radius: 50%;
        display: flex; justify-content: center; align-items: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3); z-index: 9999;
        transition: transform 0.3s ease;
    }
    .whatsapp-float:hover { transform: scale(1.1); }

    /* RESPONSIVE */
    @media (max-width: 900px) {
        .nav-links { display: none; }
        .hero-section { flex-direction: column; padding-top: 100px; padding-bottom: 100px; text-align: center; justify-content: center; }
        .hero-content { padding-right: 0; margin-bottom: 3rem; }
        .hero-content h1 { font-size: 3rem; }
        .services-grid { grid-template-columns: 1fr; gap: 4rem; }
        .star { display: none; } 
    }
</style>