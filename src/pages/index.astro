<style is:global>
    :root {
        --color-black: #000000;
        --color-cream: #FAF9F5;
        --font-serif: 'Playfair Display', serif;
        --font-script: 'Great Vibes', cursive;
        --font-sans: 'Inter', sans-serif;
    }

    html { scroll-behavior: smooth; }
    body {
        margin: 0; padding: 0;
        font-family: var(--font-serif);
        background-color: var(--color-black);
        color: var(--color-cream);
        overflow-x: hidden;
    }
    h1, h2, h3 { font-family: var(--font-serif); font-weight: 700; margin: 0; }
    p { font-family: var(--font-sans); }
    a { text-decoration: none; color: inherit; }
    .text-center { text-align: center; }

    /* ESTRUCTURA DE PANTALLAS */
    .fullscreen-section {
        height: 100vh;
        width: 100%;
        position: relative;
        box-sizing: border-box;
        overflow: hidden; 
    }
    .align-center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 80px; 
    }
    .content-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        position: relative;
        z-index: 2;
        width: 100%;
    }

    /* ANIMACIONES REVEAL */
    .reveal { opacity: 0; transform: translateY(20px); transition: opacity 0.8s ease-out, transform 0.8s ease-out; }
    .reveal.active { opacity: 1; transform: translateY(0); }

    /* --- NAVEGACIÓN Y LOGO --- */
    .navbar {
        position: fixed; top: 0; width: 100%; height: 80px;
        background-color: var(--color-black); 
        color: var(--color-cream);
        display: flex; justify-content: space-between; align-items: center;
        padding: 0 4rem; box-sizing: border-box; z-index: 1000;
        transition: background-color 0.4s ease, color 0.4s ease;
    }
    .logo-container { position: relative; height: 70px; width: 200px; display: flex; align-items: center; z-index: 1002;}
    .nav-logo { position: absolute; height: 100%; width: auto; object-fit: contain; transition: opacity 0.4s ease; }
    .logo-dark-bg { opacity: 1; mix-blend-mode: screen; }
    .logo-light-bg { opacity: 0; mix-blend-mode: multiply; }

    .navbar.scrolled { background-color: var(--color-cream); color: var(--color-black); box-shadow: 0 4px 15px rgba(0,0,0,0.08); }
    .navbar.scrolled .logo-dark-bg { opacity: 0; }
    .navbar.scrolled .logo-light-bg { opacity: 1; }

    .nav-links { list-style: none; display: flex; gap: 2rem; margin: 0; padding: 0; }
    .nav-links a { font-family: var(--font-serif); font-size: 1.1rem; transition: opacity 0.3s ease; }
    .nav-links a:hover { opacity: 0.6; }

    /* Menú Hamburguesa Oculto en PC */
    .menu-toggle {
        display: none;
        flex-direction: column;
        gap: 6px;
        cursor: pointer;
        z-index: 1002;
    }
    .menu-toggle .bar {
        width: 30px;
        height: 2px;
        background-color: var(--color-cream);
        transition: all 0.3s ease;
    }
    .navbar.scrolled .menu-toggle .bar { background-color: var(--color-black); }
    
    /* Animación del icono de menú a "X" */
    .menu-toggle.active .bar:nth-child(1) { transform: translateY(8px) rotate(45deg); }
    .menu-toggle.active .bar:nth-child(2) { opacity: 0; }
    .menu-toggle.active .bar:nth-child(3) { transform: translateY(-8px) rotate(-45deg); }

    /* --- SECCIONES --- */
    .hero-section {
        display: flex; align-items: center; justify-content: space-between;
        padding: 80px 4rem 10vh 4rem; 
        max-width: 1400px; margin: 0 auto;
    }
    .hero-content { flex: 1.1; padding-right: 2rem; }
    .hero-content h1 { font-size: clamp(2.5rem, 4vw, 4.2rem); line-height: 1.1; font-weight: 600; margin-bottom: 2vh; }
    .text-script { font-family: var(--font-script); font-size: 1.3em; font-weight: 400; padding: 0 5px;}
    .hero-subtitle { font-family: var(--font-serif); font-style: italic; font-size: clamp(1.2rem, 2vw, 1.5rem); line-height: 1.5; font-weight: 400; color: #EFEFEF; }
    
    .hero-image { flex: 1; display: flex; justify-content: center; align-items: center; }
    .image-premium-wrapper { position: relative; width: 100%; display: flex; justify-content: center; }
    .image-premium-wrapper img {
        max-width: 100%; max-height: 45vh; border-radius: 20px; 
        box-shadow: 0 20px 50px rgba(0,0,0,0.6); 
        -webkit-mask-image: linear-gradient(to bottom, black 70%, transparent 100%);
        mask-image: linear-gradient(to bottom, black 70%, transparent 100%); object-fit: cover;
    }

    .cream-section { background-color: var(--color-cream); color: var(--color-black); }

    .compact-layout { display: flex; flex-direction: column; gap: 4vh; }
    .heading-mixed { font-size: clamp(2rem, 3vw, 2.5rem); font-weight: 600; margin-bottom: 1vh; }
    .text-script-large { font-family: var(--font-script); font-size: 1.6em; font-weight: 400; margin-left: 10px;}
    .subtitle-large { font-family: var(--font-serif); font-size: clamp(1.2rem, 1.5vw, 1.4rem); line-height: 1.5; max-width: 900px; margin: 0 auto; font-weight: 400; }
    
    .huge-logo { width: 100%; display: flex; justify-content: center; }
    .huge-logo img { width: 100%; max-width: 650px; max-height: 35vh; margin-top: 0; object-fit: contain; mix-blend-mode: multiply; }

    .title-serif-huge { font-size: clamp(2.5rem, 4vw, 3.5rem); }
    .body-large { font-family: var(--font-serif); font-size: clamp(1.1rem, 2vw, 1.35rem); line-height: 1.6; max-width: 900px; margin: 0 auto; font-weight: 400; }
    .body-large strong { font-weight: 700; }

    .services-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; max-width: 1100px; margin: 0 auto; }
    .service-card { display: flex; flex-direction: column; align-items: center; text-align: center; }
    .icon-container { margin-bottom: 1vh; display:flex; justify-content:center; align-items:center; }
    .service-card h3 { font-family: var(--font-serif); font-size: clamp(1.1rem, 1.5vw, 1.3rem); font-weight: 600; line-height: 1.4; }

    .scroll-down-btn {
        position: absolute; bottom: 3vh; left: 50%; transform: translateX(-50%);
        color: var(--color-cream); animation: bounce 2s infinite; z-index: 50; 
        display: flex; justify-content: center; align-items: center; cursor: pointer;
    }
    .scroll-down-btn.dark-btn { color: var(--color-black); }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
        40% { transform: translateX(-50%) translateY(-15px); }
        60% { transform: translateX(-50%) translateY(-7px); }
    }

    .star { position: absolute; z-index: 1; opacity: 0.9; }
    
    .whatsapp-float {
        position: fixed; bottom: 30px; right: 30px; background-color: #25D366; color: white;
        width: 65px; height: 65px; border-radius: 50%; display: flex; justify-content: center; align-items: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3); z-index: 9999; transition: transform 0.3s ease;
    }
    .whatsapp-float:hover { transform: scale(1.1); }


    /* =========================================
       MEDIA QUERIES (MAGIA PARA MÓVILES)
       ========================================= */
    @media (max-width: 900px) {
        
        /* 1. Navbar y Menú Hamburguesa */
        .navbar { padding: 0 1.5rem; }
        .menu-toggle { display: flex; }
        
        .nav-links {
            position: fixed; /* Fixed para cubrir la pantalla */
            top: 0; left: -100%; /* Oculto fuera de la pantalla por la izquierda */
            width: 100%; height: 100vh;
            background-color: var(--color-black);
            flex-direction: column;
            justify-content: center; align-items: center;
            transition: left 0.4s ease;
            z-index: 1001; /* Queda por debajo del header pero por encima de todo lo demás */
        }
        .nav-links.active { left: 0; } /* Animación al entrar */
        
        /* Forzamos el color claro en las letras del menú móvil sin importar el scroll */
        .nav-links a { color: var(--color-cream); font-size: 1.8rem; margin: 15px 0; }
        .navbar.scrolled .menu-toggle .bar { background-color: var(--color-black); }
        .navbar.scrolled .menu-toggle.active .bar { background-color: var(--color-cream); } /* Si está abierto, las rayitas deben ser blancas */

        /* 2. Soltar las alturas para evitar superposición */
        .fullscreen-section {
            height: auto;
            min-height: 100vh;
            padding-bottom: 120px; /* Mucho espacio inferior para el botón de scroll */
        }
        
        /* 3. Hero Section Móvil */
        .hero-section { flex-direction: column; padding-top: 120px; text-align: center; }
        .hero-content { padding-right: 0; margin-bottom: 4vh; }
        .hero-content h1 { font-size: 3rem; }
        .hero-image { width: 100%; }
        
        /* 4. Limpieza visual */
        .desktop-only { display: none; } /* Ocultamos estrellas para no saturar */
        
        /* 5. Ajustes de Layout */
        .content-wrapper { padding: 0 1.5rem; }
        .services-grid { grid-template-columns: 1fr; gap: 3rem; }
        
        /* Evitamos que el Whatsapp tape contenido */
        .whatsapp-float { bottom: 20px; right: 20px; width: 55px; height: 55px; }
    }
</style>