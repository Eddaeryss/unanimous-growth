    </footer>

    <a href="https://wa.me/528449102095?text=Hola,%20me%20interesa%20iniciar%20un%20proyecto." target="_blank" class="whatsapp-float">
        <svg viewBox="0 0 32 32" width="34" height="34" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M16.002 2.05A13.91 13.91 0 0 0 2.096 15.96c0 2.45.635 4.84 1.84 6.95L2 29.91l7.16-1.875a13.92 13.92 0 0 0 6.842 1.785h.005A13.912 13.912 0 0 0 29.912 15.96 13.913 13.913 0 0 0 16.002 2.05zm0 23.366a11.536 11.536 0 0 1-5.875-1.6l-.42-.25-4.364 1.144 1.164-4.25-.274-.436A11.532 11.532 0 0 1 4.453 15.96a11.554 11.554 0 0 1 11.55-11.554 11.554 11.554 0 0 1 11.553 11.555 11.554 11.554 0 0 1-11.554 11.455zm6.336-8.663c-.347-.174-2.05-1.013-2.368-1.13-.318-.115-.55-.173-.78.174-.23.346-.897 1.128-1.098 1.36-.2.23-.404.26-.75.086-.347-.173-1.464-.54-2.79-1.724-1.03-1.03-1.725-2.305-1.927-2.652-.202-.347-.022-.535.152-.708.156-.155.347-.404.52-.606.174-.203.232-.347.347-.578.116-.23.058-.433-.028-.606-.087-.173-.78-1.88-1.07-2.574-.28-.675-.568-.583-.78-.594-.2-.01-.432-.012-.663-.012a1.27 1.27 0 0 0-.925.433c-.318.347-1.214 1.186-1.214 2.89s1.243 3.352 1.416 3.583c.174.23 2.44 3.73 5.91 5.23 2.835 1.226 3.468 1.13 4.103 1.07.636-.057 2.05-.838 2.34-1.648.29-.81.29-1.503.203-1.648-.087-.145-.318-.23-.665-.405z"/></svg>
    </a>

    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2/tsparticles.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            tsParticles.load("tsparticles", {
                fullScreen: { enable: false },
                particles: {
                    number: { value: 50 },
                    color: { value: "#FAF9F5" },
                    links: { enable: true, color: "#FAF9F5", distance: 150, opacity: 0.2, width: 1 },
                    move: { enable: true, speed: 0.8 },
                    size: { value: 2 },
                    opacity: { value: 0.3 }
                }
            });

            gsap.registerPlugin(ScrollTrigger);

            gsap.fromTo(".gsap-hero", 
                { y: 50, opacity: 0 }, 
                { y: 0, opacity: 1, duration: 1.2, stagger: 0.2, ease: "power3.out", clearProps: "all" }
            );

            const scrollSections = document.querySelectorAll('.gsap-section');
            scrollSections.forEach((section) => {
                gsap.fromTo(section, 
                    { y: 50, opacity: 0 },
                    {
                        scrollTrigger: {
                            trigger: section,
                            start: "top 85%", 
                            toggleActions: "play none none reverse"
                        },
                        y: 0, opacity: 1, duration: 1, ease: "power3.out"
                    }
                );
            });

            gsap.fromTo(".gsap-stagger", 
                { y: 50, opacity: 0 },
                {
                    scrollTrigger: {
                        trigger: "#stagger-container", 
                        start: "top 80%",
                        toggleActions: "play none none reverse"
                    },
                    y: 0, 
                    opacity: 1, 
                    duration: 0.8, 
                    stagger: 0.15,
                    ease: "power3.out"
                }
            );

            const navbar = document.getElementById('navbar');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 80) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });

            const menuToggle = document.getElementById('mobile-menu');
            const navLinks = document.getElementById('nav-links');
            const navItems = document.querySelectorAll('.nav-item');

            menuToggle.addEventListener('click', () => {
                navLinks.classList.toggle('active');
                menuToggle.classList.toggle('active');
            });
            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    if (navLinks.classList.contains('active')) {
                        navLinks.classList.remove('active');
                        menuToggle.classList.remove('active');
                    }
                });
            });
        });
    </script>
</body>
</html>

<style is:global>
    :root {
        --color-black: #000000;
        --color-cream: #FAF9F5;
        --font-serif: 'Playfair Display', serif;
        --font-script: 'Great Vibes', cursive;
        --font-sans: 'Inter', sans-serif;
    }
    html { scroll-behavior: smooth; }
    body { margin: 0; padding: 0; font-family: var(--font-serif); background-color: var(--color-black); color: var(--color-cream); overflow-x: hidden; }
    h1, h2, h3, h4 { font-family: var(--font-serif); font-weight: 700; margin: 0; }
    p { font-family: var(--font-sans); }
    a { text-decoration: none; color: inherit; }
</style>

<style>
    .text-center { text-align: center; }

    /* ESTRUCTURA DE PANTALLAS */
    .fullscreen-section { height: 100vh; width: 100%; position: relative; box-sizing: border-box; overflow: hidden; }
    .align-center { display: flex; flex-direction: column; justify-content: center; align-items: center; padding-top: 80px; }
    .content-wrapper { max-width: 1200px; margin: 0 auto; padding: 0 2rem; position: relative; z-index: 2; width: 100%; box-sizing: border-box; }

    /* NAVBAR */
    .navbar { position: fixed; top: 0; width: 100%; height: 80px; background-color: var(--color-black); color: var(--color-cream); display: flex; justify-content: space-between; align-items: center; padding: 0 4rem; box-sizing: border-box; z-index: 1000; transition: background-color 0.4s ease, color 0.4s ease; }
    .logo-container { position: relative; height: 50px; width: 180px; z-index: 1002; display: flex; align-items: center; }
    .logo-link { position: relative; display: block; width: 100%; height: 100%; }
    .nav-logo { position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: contain; object-position: left center; transition: opacity 0.4s ease; }
    .logo-dark-bg { opacity: 1; mix-blend-mode: screen; }
    .logo-light-bg { opacity: 0; mix-blend-mode: multiply; }
    .navbar.scrolled { background-color: var(--color-cream); color: var(--color-black); box-shadow: 0 4px 15px rgba(0,0,0,0.08); }
    .navbar.scrolled .logo-dark-bg { opacity: 0; }
    .navbar.scrolled .logo-light-bg { opacity: 1; }
    .nav-links { list-style: none; display: flex; gap: 2rem; margin: 0; padding: 0; }
    .nav-links a { font-family: var(--font-serif); font-size: 1.1rem; transition: opacity 0.3s ease; }
    .nav-links a:hover { opacity: 0.6; }
    
    .menu-toggle { display: none; flex-direction: column; gap: 6px; cursor: pointer; z-index: 1002; }
    .menu-toggle .bar { width: 30px; height: 2px; background-color: var(--color-cream); transition: all 0.3s ease; }
    .navbar.scrolled .menu-toggle .bar { background-color: var(--color-black); }
    .menu-toggle.active .bar:nth-child(1) { transform: translateY(8px) rotate(45deg); }
    .menu-toggle.active .bar:nth-child(2) { opacity: 0; }
    .menu-toggle.active .bar:nth-child(3) { transform: translateY(-8px) rotate(-45deg); }

    /* HERO */
    .relative-layer { position: relative; z-index: 2; }
    .particles-bg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 0; pointer-events: none; }
    
    .hero-section { display: flex; align-items: center; justify-content: space-between; padding: 80px 4rem 10vh 4rem; max-width: 1400px; margin: 0 auto; box-sizing: border-box; }
    .hero-content { flex: 1.1; padding-right: 2rem; }
    .hero-content h1 { font-size: clamp(2.5rem, 4vw, 4.2rem); line-height: 1.1; font-weight: 600; margin-bottom: 2vh; }
    .text-script { font-family: var(--font-script); font-size: 1.3em; font-weight: 400; padding: 0 5px;}
    .hero-subtitle { font-family: var(--font-serif); font-style: italic; font-size: clamp(1.2rem, 2vw, 1.5rem); line-height: 1.5; font-weight: 400; color: #EFEFEF; }
    .hero-image { flex: 1; display: flex; justify-content: center; align-items: center; }
    .image-premium-wrapper { position: relative; width: 100%; display: flex; justify-content: center; }
    .image-premium-wrapper img { max-width: 100%; max-height: 45vh; border-radius: 20px; box-shadow: 0 20px 50px rgba(0,0,0,0.6); -webkit-mask-image: linear-gradient(to bottom, black 70%, transparent 100%); mask-image: linear-gradient(to bottom, black 70%, transparent 100%); object-fit: cover; }

    /* SECCIONES TEXTO */
    .cream-section { background-color: var(--color-cream); color: var(--color-black); }
    .compact-layout { display: flex; flex-direction: column; gap: 4vh; }
    .heading-mixed { font-size: clamp(2rem, 3vw, 2.5rem); font-weight: 600; margin-bottom: 1vh; }
    .text-script-large { font-family: var(--font-script); font-size: 1.6em; font-weight: 400; margin-left: 10px;}
    .subtitle-large { font-family: var(--font-serif); font-size: clamp(1.2rem, 1.5vw, 1.4rem); line-height: 1.5; max-width: 900px; margin: 0 auto; font-weight: 400; }
    .huge-logo { width: 100%; display: flex; justify-content: center; }
    .huge-logo img { width: 100%; max-width: 650px; max-height: 35vh; margin-top: 0; object-fit: contain; mix-blend-mode: multiply; }
    .title-serif-huge { font-size: clamp(2.5rem, 4vw, 3.5rem); }
    .body-large { font-family: var(--font-serif); font-size: clamp(1.1rem, 2vw, 1.35rem); line-height: 1.6; max-width: 900px; margin: 0 auto; font-weight: 400; }
    .body-large strong { font-weight: 700; }

    /* GRID SERVICIOS */
    .services-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem 3rem; max-width: 1100px; margin: 0 auto 3vh auto; }
    .service-card { transition: transform 0.3s ease; }
    .service-card:hover { transform: translateY(-5px); }
    .service-link { display: flex; flex-direction: column; align-items: center; text-align: center; width: 100%; text-decoration: none; color: inherit; }
    .icon-container { margin-bottom: 1vh; display:flex; justify-content:center; align-items:center; }
    
   /* Clase exclusiva para las im치genes del componente Astro */
    .grid-icon { width: 90px; height: 90px; object-fit: contain; } /* Antes estaba en 55px */ 
    
    .service-link h3 { font-family: var(--font-serif); font-size: clamp(1.1rem, 1.5vw, 1.3rem); font-weight: 600; line-height: 1.4; transition: color 0.3s ease; }
    .service-link:hover h3 { color: #555; }

    /* FOOTER */
    .footer-section { background-color: var(--color-black); color: var(--color-cream); padding: 4rem 2rem 1.5rem 2rem; border-top: 1px solid rgba(250, 249, 245, 0.1); width: 100%; box-sizing: border-box;}
    .footer-content { display: flex; flex-direction: row; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 3rem; margin-bottom: 3rem; }
    .footer-col { flex: 1; min-width: 250px;}
    .footer-tagline { font-size: 1rem; font-style: italic; opacity: 0.8; }
    .footer-col h4 { font-size: 1.2rem; margin-bottom: 1.2rem; text-transform: uppercase; letter-spacing: 1px; }
    .footer-col p, .footer-col ul { font-family: var(--font-sans); font-size: 0.95rem; line-height: 1.8; opacity: 0.85; margin-bottom: 0.5rem; }
    .links-col ul { list-style: none; padding: 0; }
    .links-col a { transition: color 0.3s ease; }
    .links-col a:hover { color: #EFEFEF; opacity: 1; }
    .footer-bottom { text-align: center; border-top: 1px solid rgba(250, 249, 245, 0.1); padding-top: 1.5rem; font-size: 0.85rem; opacity: 0.6; font-family: var(--font-sans); }

    /* BOTONES */
    .scroll-down-btn { position: absolute; bottom: 3vh; left: 50%; transform: translateX(-50%); color: var(--color-cream); animation: bounce 2s infinite; z-index: 50; display: flex; justify-content: center; align-items: center; cursor: pointer; }
    .scroll-down-btn.dark-btn { color: var(--color-black); }
